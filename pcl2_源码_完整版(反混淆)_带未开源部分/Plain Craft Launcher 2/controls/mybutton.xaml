<Border
	x:Class="PCL.MyButton" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Name="PanBack"
	Focusable="True"
	UseLayoutRounding="False"
	SnapsToDevicePixels="False"
	Background="{StaticResource ColorBrushSemiTransparent}" xmlns:pcl="clr-namespace:PCL"
	FocusVisualStyle="{x:Null}">
	<!--未知连接 ID：2-->
	<Border
		Name="PanFore"
		CornerRadius="3"
		BorderThickness="1"
		BorderBrush="{DynamicResource ColorBrush1}"
		RenderTransformOrigin="0.5,0.5"
		Background="{StaticResource ColorBrushHalfWhite}">
		<UIElement.RenderTransform>
			<ScaleTransform />
		</UIElement.RenderTransform>
		<!--未知连接 ID：3-->
		<TextBlock
			Name="LabText"
			TextOptions.TextFormattingMode="Display"
			SnapsToDevicePixels="True"
			TextTrimming="None"
			Text="Button"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			RenderTransformOrigin="0.5,0.5"
			FontSize="13"
			IsHitTestVisible="False"
			Foreground="{Binding Parent.BorderBrush, RelativeSource={RelativeSource Self}}">
			<UIElement.RenderTransform>
				<ScaleTransform />
			</UIElement.RenderTransform>
		</TextBlock>
	</Border>
</Border>
